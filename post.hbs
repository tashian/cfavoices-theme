{{!< default}}
{{#post}}
<article class="{{post_class}}">
  <div class="container limit-width">
		<div class="image-wrapper">
			{{#if image}}
			<img src="{{image}}" alt="thumbnail" />
			{{else}}
			<img src="{{asset "images/empty.png"}}" alt="thumbnail" style="height: 0px;" />
			{{/if}}
		</div>
    <h1>{{title}}</h1>
		{{content}}

		<div class="post-bottom-info">
			<!-- Share post -->
			{{> addons/share}}
		</div>
  </div>
</article>

<!-- Comments -->
<section class="comment">
  <div class="container limit-width">
   {{> addons/comment}}
  </div>
</section>

{{/post}}
